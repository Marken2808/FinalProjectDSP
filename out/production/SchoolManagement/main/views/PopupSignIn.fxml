<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.PopupSignIn">
   <children>
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="Log In">
               <font>
                  <Font name="Segoe UI" size="30.0" />
               </font>
            </Label>
            <VBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <JFXTextField id="error" fx:id="filedUsername" labelFloat="true" onKeyReleased="#isEmpty" promptText="Username" />
                  <HBox alignment="CENTER_RIGHT" spacing="5.0">
                     <children>
                        <Label fx:id="textInfor" contentDisplay="CENTER" disable="true" text="abccccc" textFill="#f90606">
                           <font>
                              <Font size="13.0" />
                           </font></Label>
                        <ImageView fx:id="picInfor" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resources/images/icon/alert-circle.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <JFXPasswordField fx:id="fieldPassword" labelFloat="true" onKeyReleased="#isEmpty" promptText="Password" />
                  <HBox alignment="CENTER_RIGHT" spacing="5.0">
                     <children>
                        <Label fx:id="textInfor" contentDisplay="CENTER" disable="true" text="abccccc" textFill="#f90606">
                           <font>
                              <Font size="13.0" />
                           </font></Label>
                        <ImageView fx:id="picInfor" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resources/images/icon/alert-circle.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <JFXToggleButton fx:id="btnAuto" contentDisplay="RIGHT" graphicTextGap="10.0" onMouseClicked="#autoFill" size="7.0" text="Auto" toggleColor="#00ffaa" toggleLineColor="#42c3c3ab" />
            <HBox alignment="CENTER">
               <children>
                  <JFXButton fx:id="btnSignIn" buttonType="RAISED" disable="true" onAction="#makeLogin" style="-fx-background-color: #00ffaa;" text="Sign In" />
                  <JFXButton fx:id="btnSignUp" onAction="#letRegister" text="Sign Up" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
