<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.TabStudentController">
   <children>
      <TableView fx:id="tableSTUDENT" onMouseClicked="#clickOnTable" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
        <columns>
            <TableColumn fx:id="colSID" text="Student ID" />
          <TableColumn fx:id="colSNAME" text="Student Name" />
            <TableColumn fx:id="colMID" text="Marked All" />
        </columns>
      </TableView>
      <JFXDrawer fx:id="drawerViewPane" alignment="TOP_CENTER" defaultDrawerSize="600.0" direction="BOTTOM" overLayVisible="false" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
