         <children>
            <JFXButton fx:id="closeControlBtn" alignment="CENTER" cache="true" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="1.7976931348623157E308" onMouseClicked="#closeControlPane" style="-fx-background-color: red;" textAlignment="CENTER" visible="false" wrapText="true" />
         </children>
      </JFXDrawer>
   </children>
</AnchorPane>
