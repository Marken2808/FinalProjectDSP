<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.InforController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label fx:id="labelTitle" text="TEST" />
            <ImageView fx:id="imgType" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../resources/images/icon/alert-circle_red.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <JFXButton fx:id="btnCancel" buttonType="RAISED" onMouseClicked="#clickCancel" text="OK" />
   </children>
</VBox>
