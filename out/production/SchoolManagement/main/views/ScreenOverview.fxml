<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ScreenOverview">
   <children>
      <VBox alignment="CENTER" StackPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <AreaChart fx:id="areaChart" style="-fx-background-color: white;" title="Attendance" HBox.hgrow="ALWAYS">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </AreaChart>
                  <AnchorPane prefWidth="200.0" style="-fx-background-color: red;" />
                  <AnchorPane prefWidth="200.0" style="-fx-background-color: green;" />
                  <AnchorPane prefWidth="200.0" style="-fx-background-color: yellow;" />
               </children>
            </HBox>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: pink;" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</StackPane>
