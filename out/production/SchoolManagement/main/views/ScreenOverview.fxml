<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ScreenOverview">
   <children>
      <VBox alignment="CENTER" spacing="10.0" StackPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <AreaChart fx:id="areaChart" style="-fx-background-color: white;" title="Attendance" HBox.hgrow="ALWAYS">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </AreaChart>
                  <VBox spacing="10.0">
                     <children>
                        <StackPane style="-fx-background-color: orange;" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="Attendance Code" />
                           </children>
                        </StackPane>
                        <StackPane fx:id="calendarPane" style="-fx-background-color: green;" />
                        <StackPane style="-fx-background-color: lime;" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="Total" />
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: pink;">
                     <children>
                        <Label text="Update Later" />
                     </children>
                  </StackPane>
                  <StackPane style="-fx-background-color: yellow;" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Update Later" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</StackPane>
