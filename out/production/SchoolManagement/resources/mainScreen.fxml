            <JFXButton fx:id="btnStart" buttonType="RAISED" disable="true" onAction="#startCamera" text="Start Camera" />
            <JFXButton fx:id="btnShot" buttonType="RAISED" disable="true" onAction="#takeShot" text="Shot" />
            <JFXButton fx:id="btnInsert" buttonType="RAISED" onAction="#insertImage" text="Insert Image" />
         </children>
      </HBox>
   </children>
</AnchorPane>
