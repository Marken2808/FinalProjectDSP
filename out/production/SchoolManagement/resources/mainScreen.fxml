            <ImageView fx:id="currentFrame" fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
               <StackPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
