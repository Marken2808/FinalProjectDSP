         <children>
            <JFXCheckBox fx:id="haarClassifier" checkedColor="#2ab0c5" onAction="#haarSelected" text="Haar Classifier" />
            <JFXCheckBox fx:id="lbpClassifier" checkedColor="#2ab0c5" onAction="#lbpSelected" text="Lbp Classifier" />
