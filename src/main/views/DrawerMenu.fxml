<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="drawerPane" alignment="TOP_CENTER" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.DrawerMenu">
   <children>
      <ImageView fx:id="picAvatar" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true">
         <image>
            <Image url="@../../resources/images/icon/alert-circle.png" />
         </image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ImageView>
      <JFXButton alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" text="&lt;User&gt;">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../resources/images/icon/user.png" />
                     </image>
                  </ImageView>
                  <HBox alignment="CENTER" prefHeight="41.0" prefWidth="135.0">
                     <children>
                        <Label fx:id="lableName" alignment="CENTER" contentDisplay="CENTER" text="User">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="Segoe UI Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </graphic>
      </JFXButton>
      <JFXButton fx:id="btnHome" accessibleText="Home" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="-Infinity" minHeight="-Infinity" onMouseClicked="#isHomeClicked" prefHeight="50.0" prefWidth="200.0" text="&lt;Home&gt;">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../resources/images/icon/home.png" />
                     </image>
                  </ImageView>
                  <Label text="Home">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </graphic>
      </JFXButton>
      <JFXButton accessibleText="Setting" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" text="&lt;Setting&gt;">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../resources/images/icon/settings.png" />
                     </image>
                  </ImageView>
                  <Label text="Setting">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </graphic>
      </JFXButton>
      <JFXButton fx:id="btnDashboard" accessibleText="Dashboard" alignment="CENTER" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" text="&lt;Dashboard&gt;" VBox.vgrow="ALWAYS">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../resources/images/icon/activity.png" />
                     </image>
                  </ImageView>
                  <Label text="Dashboard">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </graphic>
      </JFXButton>
      <JFXButton fx:id="btnSignOut" alignment="CENTER" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" maxHeight="-Infinity" minHeight="-Infinity" onMouseClicked="#makeLogOut" prefHeight="50.0" prefWidth="200.0" text="&lt; Log out&gt;" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <graphic>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../resources/images/icon/log-out.png" />
                     </image>
                  </ImageView>
                  <Label text="Log out">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </graphic>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </JFXButton>
   </children>
</VBox>
