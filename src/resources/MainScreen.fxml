<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MainScreenController">
   <center>
      <ImageView fx:id="currentFrame" fitHeight="500.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <VBox style="-fx-background-color: #d9d9d9;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" spacing="50.0">
               <children>
                  <CheckBox fx:id="haarClassifier" mnemonicParsing="false" onAction="#haarSelected" text="Haar Classifier" />
                  <CheckBox fx:id="lbpClassifier" mnemonicParsing="false" onAction="#lbpSelected" text="Lbp Classifier" />
               </children>
            </HBox>
            <Separator />
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox style="-fx-background-color: #e6e6e6;" BorderPane.alignment="CENTER">
         <children>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="50.0" spacing="50.0">
               <children>
                  <Button fx:id="btnStart" disable="true" mnemonicParsing="false" onAction="#startCamera" text="Start Camera" />
                  <Button fx:id="btnShot" contentDisplay="CENTER" disable="true" graphicTextGap="0.0" mnemonicParsing="false" onAction="#takeShot" text="Shot" />
                  <Button fx:id="btnInsert" contentDisplay="CENTER" mnemonicParsing="false" onAction="#insertImage" text="Insert Image" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
