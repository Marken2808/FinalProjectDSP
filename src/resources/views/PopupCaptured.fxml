<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PopupCaptured">
   <children>
      <VBox fx:id="boxData" alignment="CENTER" spacing="2.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="REGISTER">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ImageView fx:id="captImg" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
            <HBox alignment="BOTTOM_CENTER" prefHeight="40.0">
               <children>
                  <JFXComboBox fx:id="comboPic" labelFloat="true" promptText="Pic">
                     <cursor>
                        <Cursor fx:constant="CLOSED_HAND" />
                     </cursor>
                  </JFXComboBox>
               </children>
            </HBox>
            <HBox fx:id="hboxInfor" alignment="CENTER_RIGHT" spacing="5.0" style="-fx-background-color: #eeeeee;" visible="false">
               <children>
                  <Label fx:id="textInfor" text="Please, provide all variable above" textFill="#f90606">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="picInfor" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icon/alert-circle_red.png" />
                     </image>
                  </ImageView>
               </children>
               <padding>
                  <Insets right="25.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
